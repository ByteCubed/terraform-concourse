[
  {
    "name": "concourse_worker",
    "image": "${image}",
    "command": [ "worker" ],
    "privileged": true,
    "cpu": 10,
    "memory": 256,
    "essential": true,
    "environment": [
      { "name": "CONCOURSE_TSA_HOST" , "value": "${concourse_external_url}" },
      { "name": "_CONCOURSE_KEYS_S3" , "value": "s3://${concourse_keys_bucket_name}/"  }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslog_group_name}",
        "awslogs-region": "${awslog_region}",
        "awslogs-stream-prefix": "concourse_worker"
      }
    }
  }
]
